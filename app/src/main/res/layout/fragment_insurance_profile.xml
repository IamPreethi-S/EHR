<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".insurance.InsuranceProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/insurance_profile_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary"
            android:indeterminateTintMode="src_atop"
            android:progressDrawable="@drawable/circular_progress_bar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/insurance_profile_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/error"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/insurance_profile_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_name"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_name_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_name"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_email"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_email_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_email"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:enabled="false"
                    android:background="@drawable/custom_edit_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_password"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_password_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_password"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_contact"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_contact_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_contact"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_address1"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_address1_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_address1"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_address2"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_address2_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_address2"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_city"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_city_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_city"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_state"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_state_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_state"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/insurance_profile_zip"
                    android:paddingStart="6dp"
                    android:paddingEnd="12dp"
                    android:text="@string/insurance_zip_label"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/insurance_profile_zip"
                    android:layout_width="360dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edit_text"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/insurance_profile_update_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/error"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp"
                android:paddingBottom="60dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/insurance_profile_update_button"
                    android:layout_width="360dp"
                    android:layout_height="48dp"
                    android:background="@drawable/custom_primary_button"
                    android:text="@string/insurance_update"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Empty TextView to add artificial padding after button for scroll -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/insurance_profile_update_button2"
                    android:layout_width="360dp"
                    android:layout_height="48dp"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>