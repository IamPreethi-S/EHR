<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/patient_register_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:id="@+id/sign_up_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Sign Up"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/patient_register_firstname"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />


            <EditText
                android:id="@+id/patient_register_lastname"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_email"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_password"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <Spinner
                android:id="@+id/patient_register_gender"
                style="@style/InsuranceSpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/icon_arrow_down"
                android:drawablePadding="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="12dp" />

            <TextView
                android:id="@+id/patient_register_dob"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:hint="DOB"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_contact"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Contact"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_address1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Address1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_address2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Address2"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_city"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="City"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_state"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="State"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <EditText
                android:id="@+id/patient_register_zip"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="8dp"
                android:hint="Zip"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColorHint="@color/dark_gray" />

            <TextView
                android:id="@+id/patient_register_error_text"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/error"
                android:textSize="18sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/patient_register_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_primary_button"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Already Have an account?"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/patient_register_signin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:text="Sign In"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Added sample layout to make the save button visible due to scroll view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="24dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/sample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="80dp"
                    android:textColor="@color/error"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>