<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMedicationId"
        android:layout_width="380dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="MedicationId: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="384dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:text="Status: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedicationId" />

    <TextView
        android:id="@+id/textViewPatientName"
        android:layout_width="374dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:text="Patient Name: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatus" />

    <ToggleButton
        android:id="@+id/toggleButtonStatus"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#fff"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="364dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:text="Patient Id: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPatientName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="375dp"
        android:layout_height="87dp"
        android:layout_marginStart="20dp"
        android:text="Medications: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="372dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:text="Patient Notes: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="367dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:text="Provider Notes: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:text="Patient Emailid: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="369dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:text="Patient Contact: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

</androidx.constraintlayout.widget.ConstraintLayout>